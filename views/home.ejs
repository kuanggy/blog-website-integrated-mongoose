<%- include("header.ejs") %>
<h1>Home</h1>
<p><%= homeStartingContent %> </p>
<% for (var i = 0; i < posts.length; i++) { %>
    <% post_short = ""; %>
    <% if (posts[i].detail.length > 100){ %>
        <% post_short = posts[i].detail.substring(0, 100) + "..."; %>
        <% } else { %>
            <% post_short = posts[i].detail; %>
            <% } %>
    <div class="card">
        <div class="card-body">
            <h2 class="card-title"><%- posts[i].topic %></h2>
            <p class="card-text"><%- post_short %></p>
            <a href="/post/<%- posts[i].id %>" class="btn btn-primary">Read more</a>
        </div>
    </div>
<% } %>
<hr>
<a href="/compose" class="btn btn-success">New Post</a>

<%- include("footer.ejs") %>